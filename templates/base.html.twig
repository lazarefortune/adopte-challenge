<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Adopte - Test Technique{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body class="bg-gray-50 min-h-screen">

{# HEADER SIMPLE #}
<header class="w-full bg-white shadow-sm">
    <nav class="max-w-5xl mx-auto px-4 py-3 flex items-center justify-between">

        <a href="{{ path('app_home') }}" class="text-xl font-semibold text-gray-900">
            Adopte
        </a>

        <div class="flex items-center gap-4">

            {% for message in app.flashes('error') %}
                <div class="form-error">{{ message }}</div>
            {% endfor %}

            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin_users') }}" class="text-orange-700 font-semibold hover:text-black">Utilisateurs</a>
                    <a href="{{ path('admin_purchases') }}" class="text-orange-700 font-semibold hover:text-black">Achats</a>
                {% endif %}
                {% if is_granted('ROLE_CLIENT') %}
                    <a href="{{ path('app_subscribe') }}" class="text-gray-700 hover:text-black">Abonnement</a>
                    <a href="{{ path('app_settings') }}" class="text-gray-700 hover:text-black">Paramètres</a>
                {% endif %}
                <a href="{{ path('app_logout') }}" class="text-red-600 hover:text-red-800">
                    Déconnexion
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" class="text-gray-700 hover:text-black">
                    Se connecter
                </a>
            {% endif %}
        </div>

    </nav>
</header>

<div class="max-w-4xl mx-auto mt-4 px-4">
    {% for message in app.flashes('success') %}
        <div class="alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert-error">{{ message }}</div>
    {% endfor %}
</div>

<main class="pt-6">
    {% block body %}{% endblock %}
</main>

</body>
</html>
