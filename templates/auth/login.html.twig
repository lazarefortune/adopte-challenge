{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
        <div class="card w-full max-w-md">

            <h2 class="card-header text-center">Connexion</h2>

            {% if error %}
                <div class="alert-error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="alert-success flex justify-between items-center">
                    <span>Connecté en tant que <strong>{{ app.user.userIdentifier }}</strong></span>
                    <a href="{{ path('app_logout') }}" class="text-indigo-600 underline">Déconnexion</a>
                </div>
            {% endif %}

            <form method="post" class="card-body space-y-4">

                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input
                        type="email"
                        name="_username"
                        class="form-input"
                        value="{{ last_username }}"
                        required
                        autofocus
                    >
                </div>

                <div class="form-group">
                    <label class="form-label">Mot de passe</label>
                    <input
                        type="password"
                        name="_password"
                        class="form-input"
                        required
                    >
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="card-footer">
                    <button class="btn w-full" type="submit">Se connecter</button>
                </div>
            </form>

        </div>
    </div>

{% endblock %}
