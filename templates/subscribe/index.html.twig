{% extends 'base.html.twig' %}
{% block title %}Souscrire à un abonnement{% endblock %}
{% block body %}
    <div class="min-h-screen flex flex-col items-center justify-center px-4">
        <div class="card w-full max-w-lg">

            <div class="card-header">
                <h1 class="text-3xl font-semibold">Souscrire à un abonnement</h1>
            </div>

            {% for message in app.flashes('error') %}
                <div class="form-error">{{ message }}</div>
            {% endfor %}

            {{ form_start(form, {attr: {class: 'card-body flex flex-col gap-4'}}) }}

            <div class="form-group">
                {{ form_label(form.subscription_type, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.subscription_type, {'attr': {'class': 'form-input'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.card_number, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.card_number, {'attr': {'class': 'form-input'}}) }}
                {{ form_errors(form.card_number) }}
            </div>

            <div class="form-group">
                {{ form_label(form.cvv, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.cvv, {'attr': {'class': 'form-input'}}) }}
                {{ form_errors(form.cvv) }}
            </div>

            <button type="submit" class="btn w-full">Payer</button>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
